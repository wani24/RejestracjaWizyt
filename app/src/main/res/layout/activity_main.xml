<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.student.kolokwium.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="Umow wizyte"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wpisz pesel pacjenta dla którego chcesz umówić wizytę"
        android:textColor="@android:color/holo_green_dark"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj numer pesel"
        android:gravity="center"
        android:paddingTop="20dp"
        android:id="@+id/edit_pesel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_healing_black_24dp"


        />
    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="WYBIERZ LEKARZA"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"

        android:id="@+id/wybierz_lekarza"/>

</LinearLayout>