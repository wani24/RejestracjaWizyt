<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.student.kolokwium.Item">


    <TextView
        android:id="@+id/imie_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Jan"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nazwisko_l"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/imie_l"
        android:text="Kowalski"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/wybierz"
        android:layout_alignParentTop="true"
        android:text="Godziny przyjÄ™cia:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="11dp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/przyj_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:text="Pn-Pt 7.00-16.00"
        android:textColor="@android:color/background_dark"
        android:textSize="12dp" />


    <Button
        android:id="@+id/wybierz"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/przyj_l"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="WYBIERZ"
        android:textColor="@android:color/white" />
</RelativeLayout>